{
	"name": "test-runner",
	"displayName": "test-runner",
	"description": "VS Code Extension's tests runner",
	"version": "0.0.1",
	"repository": {},
	"publisher": "redhat",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.runTests1",
				"title": "Run VSCode Extension's Tests from folder"
			},
			{
				"command": "extension.runTests2",
				"title": "Run VSCode Extension's Tests from extension"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.32.0",
		"glob": "^7.1.4",
		"source-map-support": "^0.5.12",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"@types/mocha": "^5.2.6",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"mocha": "^6.1.4",
		"ncp": "^2.0.0",
		"ts-mocha": "^6.0.0",
        "ts-node": "^8.5.4",
		"typescript": "^4.0.2"
	}
}
